<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="thelibrarians.sulibraryapp.AboutFragment">

    <!-- TODO: Update blank fragment layout -->
    <!--fragment contains info on creator of app-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_icon"
        android:id="@+id/linearLayout"
        android:gravity="center_horizontal">

        <Space
            android:layout_width="112dp"
            android:layout_height="112dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAlignment="center"
        android:layout_marginBottom="80dp"
        android:background="@drawable/custom_rectangle"
        android:alpha=".8"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Version 100.21.lol.omg"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@2016 Salisbury University Libraries"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For questions, comments, or concerns, please contact Chris Woodall (cmwoodall@salisbury.edu)."
            android:id="@+id/textView4"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textAlignment="center"
            android:textSize="17dp" />
    </LinearLayout>

    <Space
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
