<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="thelibrarians.sulibraryapp.ChatFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:background="@drawable/custom_rectangle"
        android:alpha="0.80"
        android:orientation="vertical"
        android:layout_marginTop="22dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">
        <ImageView
            android:id="@+id/bubble"
            android:src="@drawable/chatavailable1x"
            android:layout_width="match_parent"
            android:layout_height="178dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="SU Libraries Chat is currently"
            android:textColor="@android:color/black"
            android:layout_marginEnd="80dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="10dp"
            android:textStyle="normal|bold"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/chat_is"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:textColor="@android:color/holo_green_light"
            android:text="Available!"
            android:layout_marginTop="1dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="37dp"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/chatMeUp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Star a New Chat"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="100dp"
            android:layout_marginStart="100dp"
            android:textSize="21sp"
            android:textStyle="normal|bold" />
    </LinearLayout>
</FrameLayout>
