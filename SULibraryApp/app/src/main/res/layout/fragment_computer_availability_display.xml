<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="thelibrarians.sulibraryapp.ComputerAvailabilityDisplayFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/header_img">
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/computer_top_img"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true">
                </ImageView>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/group_name_detail"
                    android:gravity="left"
                    android:layout_margin="10dp"
                    android:textStyle="bold"
                    android:textSize="50sp"
                    android:textColor="#FFFFFF">
                </TextView>
            </RelativeLayout>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/computer_room_description"
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:layout_below="@id/header_img"
                android:layout_centerHorizontal="true">
            </TextView>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/num_computers_available"
                android:textStyle="bold|italic"
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:layout_below="@id/computer_room_description"
                android:layout_centerHorizontal="true">
            </TextView>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/computer_table"
                android:background="@drawable/computer_available_background_shape"
                android:stretchColumns="*"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:layout_below="@id/num_computers_available"></TableLayout>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="View As Map"
                android:textStyle="italic"
                android:id="@+id/view_as_map_computer"
                android:layout_below="@id/computer_table"
                android:textAlignment="center"
                android:textColorLink="#800000"
                android:textSize="20sp"></TextView>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</FrameLayout>
